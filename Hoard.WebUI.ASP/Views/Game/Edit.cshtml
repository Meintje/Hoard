@model Hoard.WebUI.Services.ViewModels.Game.GameCreateUpdate.GameUpdateViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row mb-3">
    <div class="ml-0 mr-auto" style="margin-top: -20px;">
        <a asp-controller="Game" asp-action="Details" asp-route-id="@Model.ID" class="btn btn-success btn-lg">< Game</a>
    </div>
</div>

<div class="row mb-2">
    <div>
        <h1>Editing @Html.DisplayFor(model => model.Title)</h1>
    </div>
</div>

<div class="row card-row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <partial name="_CreateUpdateFormPartial" />
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <a asp-controller="Game" asp-action="Details" asp-route-id="@Model.ID" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
