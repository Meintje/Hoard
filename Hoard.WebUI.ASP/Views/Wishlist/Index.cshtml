@{
    ViewData["Title"] = "Wishlist";
}

<div class="container">
    <div class="row mb-3">
        <div class="ml-auto mr-0" style="margin-top: -20px;">
            <a href="#" class="btn btn-success btn-lg">New item+</a>
        </div>
    </div>

    <div class="row mb-2">
        <div>
            <h1 style="margin-right: 15px; margin-bottom: 0px;">Wishlist</h1>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="table-responsive-xl">
        <table class="table table-hover table-striped" style="min-width: 1100px;">
            <thead>
                <tr>
                    <th>
                        Type
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Added
                    </th>
                    <th>
                        Release
                    </th>
                    <th>
                        Priority
                    </th>
                    <th>
                        Notes
                    </th>
                    <th>
                        URL
                    </th>
                    <th>
                        Language
                    </th>
                    <th style="width: 1%">

                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 35; i++)
                {
                    <tr style="cursor: pointer;" onclick="window.location='@Url.Action("Index", "Wishlist")'">
                        <td>
                            Game
                        </td>
                        <td>
                            DummyTitle
                        </td>
                        <td>
                            01/01/0001
                        </td>
                        <td>
                            02/01/0001
                        </td>
                        <td>
                            DummyPriority
                        </td>
                        <td>
                            A fairly long example of some dummy notes relating to a wishlist entry. I want this to wrap around to see how it looks. It needs to be even longer.
                        </td>
                        <td>
                            DummyLink
                        </td>
                        <td>
                            DummyLanguage
                        </td>
                        <td style="vertical-align: middle;">
                            <a href="#" class="btn btn-danger btn-sm table-button">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>