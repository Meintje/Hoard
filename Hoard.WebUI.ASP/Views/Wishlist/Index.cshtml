@model Hoard.WebUI.Services.ViewModels.Wishlist.Index.WishlistIndexViewModel

@{
    ViewData["Title"] = "Wishlist";
}

<div class="container">
    <div class="row mb-3">
        <div class="ml-auto mr-0" style="margin-top: -20px;">
            <a asp-action="Create" class="btn btn-success btn-lg">New item+</a>
        </div>
    </div>

    <div class="row mb-2">
        <div>
            <h1 style="margin-right: 15px; margin-bottom: 0px;">Wishlist</h1>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="table-responsive-xl">
        <table class="table table-hover table-striped" style="min-width: 1100px;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().ItemType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().AddDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().ReleaseDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Priority)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().URL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Notes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Language)
                    </th>
                    <th style="width: 1%">

                    </th>
                    <th style="width: 1%">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReleaseDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Priority)
                        </td>
                        <td>
                            @if (item.URL != null && item.URL != "")
                            {
                                <a href="@Html.DisplayFor(modelItem => item.URL)">Link</a>
                            }
                            else
                            {
                                <span>n/a</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Language)
                        </td>
                        <td style="vertical-align: middle;">
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm table-button">Edit</a>
                        </td>
                        <td style="vertical-align: middle;">
                            <a href="#" class="btn btn-danger btn-sm table-button">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>